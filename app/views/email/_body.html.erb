<div>
	<h3> <%= email.object %> </h3>
	<p> <%= email.body %> </p>

	<%= link_to "Supprimer", email_path(@email.id), method: :delete, remote: true, class: "btn btn-danger" %>

	<%= link_to "Marquer comme non-lu", email_path(@email.id), method: :put, remote: true, class: "btn btn-secondary btn-not-read" %>
</div>